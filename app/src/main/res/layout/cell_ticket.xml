<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnr_event_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/viw_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/txt_ticket_type"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        tools:text="@string/generic_full_price"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_small_3"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txt_ticket_title"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pacote com helicÃ³ptero"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_small_3"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_ticket_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/generic_ticket_price"
        android:layout_marginBottom="8dp"/>

</LinearLayout>